<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Website</th>
      <th>Deck</th>
      <th>Contact</th>
      <th>Stage</th>
      <th>Via</th>
      <th>Angel list</th>
      <th>Mattermark</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.description %></td>
        <td><%= company.website %></td>
        <td><%= company.deck %></td>
        <td><%= company.contact %></td>
        <td><%= company.stage %></td>
        <td><%= company.via %></td>
        <td><%= company.angel_list %></td>
        <td><%= company.mattermark %></td>
        <td><%= company.status %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

